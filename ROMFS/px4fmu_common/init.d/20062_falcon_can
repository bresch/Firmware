#!nsh
#
# @name FlyingWings Falcon Vertigo Delta Quad VTOL CAN 
# @type Standard VTOL
# @class VTOL
# @maintainer Mathieu Brsciani <brescianimathieu@gmail.com>
# @output CAN Quad X
# @output AUX1 Aileron 1
# @output AUX2 Aileron 2
# @output AUX3 Throttle
#

sh /etc/init.d/rc.vtol_defaults

if [ $AUTOCNF == yes ]
then

    param set BAT_N_CELLS 4

    # 0 motor count (PWM) as they are on CAN
    param set VT_TYPE 2
    param set VT_MOT_COUNT 0
    param set VT_TRANS_THR 0.85
    param set VT_ARSP_TRANS 14.0
    param set VT_ARSP_BLEND 8.0
    param set VT_TRANS_TIMEOUT 15.0
    param set VT_DWN_PITCH_MAX 0.0 
    param set VT_FWD_THRUST_SC 1.2 
    param set VT_FW_PERM_STAB 1 
    param set VT_QC_P 45 
    param set VT_QC_R 55 

    param set PWM_DISARMED 900
    param set PWM_AUX_DISARMED 950
    param set PWM_RATE 50

    param set MC_ROLL_P 6.5
    param set MC_ROLLRATE_P 0.2
    param set MC_ROLLRATE_I 0.05
    param set MC_ROLLRATE_D 0.003
    param set MC_ROLLRATE_FF 0.0
    param set MC_PITCH_P 6.0
    param set MC_PITCHRATE_P 0.15
    param set MC_PITCHRATE_I 0.05
    param set MC_PITCHRATE_D 0.003
    param set MC_PITCHRATE_FF 0.0
    param set MC_YAW_P 3.5
    param set MC_YAW_FF 0.5
    param set MC_YAWRATE_P 0.3
    param set MC_YAWRATE_I 0.1
    param set MC_YAWRATE_D 0.0
    param set MC_YAWRATE_FF 0.0
    param set MC_YAWRATE_MAX 40
    param set MC_YAWRAUTO_MAX 40

    param set MPC_Z_VEL_I 0.1
    param set MPC_THR_HOVER 0.68
    param set MPC_XY_FF 0.5 
    param set MPC_XY_VEL_MAX 4.0
    param set MPC_XY_VEL_P 0.25 

    param set FW_T_HRATE_FF 0.2
    param set FW_PR_FF 0.4
    param set FW_PR_I 0.15
    param set FW_PR_IMAX 0.4
    param set FW_PR_P 0.14
    param set FW_RR_FF 0.3
    param set FW_RR_I 0.15
    param set FW_RR_IMAX 0.2
    param set FW_RR_P 0.21
    param set FW_THR_CRUISE 0.6
    param set FW_MAN_P_MAX 30.0 
    #Pitch setpoint offset for manual control and blind transitions
    param set FW_PSP_OFF 3.0 
    # Roll and pitch limitation in position and mission modes
    param set FW_P_LIM_MAX 30.0 
    param set FW_P_LIM_MIN -25.0 
    param set FW_R_LIM 45.0  

    param set UAVCAN_ENABLE 3
    param set UAVCAN_BITRATE 1000000
    param set UAVCAN_ESC_IDLT 1
    param set UAVCAN_NODE_ID 1
fi

set MIXER vtol_quad_x
# Load CAN mixer for lifting system
set MIXER_CAN vtol_quad_x

set PWM_RATE p:PWM_RATE

# Load AUX mixer for FW servos and pusher
set MIXER_AUX vtol_delta
set PWM_AUX_OUT 123
# Set proper disarmed value to the pusher ESC (AUX 3)
set PWM_ACHDIS 3

set MAV_TYPE 22

